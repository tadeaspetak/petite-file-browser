{
  "name": "teleport-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production INLINE_RUNTIME_CHUNK=false craco build",
    "clean": "yarn run clean:build && yarn run clean:deps",
    "clean:build": "rm -rf .build",
    "clean:deps": "rm -rf node_modules",
    "dev": "yarn run dev:server & yarn run dev:client",
    "dev:client": "INLINE_RUNTIME_CHUNK=false craco start",
    "dev:server": "nodemon server/index.ts",
    "docker": "yarn run build && yarn run start:prod",
    "eject": "react-scripts eject",
    "start:prod": "NODE_ENV=production ts-node server/index.ts",
    "test": "yarn run test:server",
    "test:client": "craco test",
    "test:server": "jest -c jest.config.server.js ./server"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^6.4.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.1",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.15",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/set-cookie-parser": "^2.4.1",
    "@types/supertest": "^2.0.11",
    "autoprefixer": "^9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.15",
    "postcss": "^7",
    "prettier": "^2.5.0",
    "set-cookie-parser": "^2.4.8",
    "supertest": "^6.1.6",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "ts-jest": "^26.4.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.2"
  },
  "proxy": "https://localhost:8080"
}
